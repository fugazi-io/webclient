{
	"name": "restheart",
	"title": "RESTHeart API for MongoDB",
	"description": "An API for accessing mongodb instances",
	"remote": {
		"origin": "http://0.0.0.0:8085",
		"base": "/",
		"auth": "basic"
	},
	"modules": {
		"databases": {
			"title": "Databases",
			"commands": {
				"list": {
					"title": "List databases",
					"returns": "map",
					"syntax": "list dbs",
					"handler": {
						"endpoint": "/",
						"method": "GET"
					}
				},
				"get": {
					"title": "Get a database",
					"returns": "map",
					"syntax": "get db (dbname string)",
					"handler": {
						"endpoint": "/{ dbname }",
						"method": "GET"
					}
				}
			}
		},
		"collections": {
			"title": "Collections",
			"commands": {
				"list": {
					"title": "List collections",
					"returns": "map",
					"syntax": "list collections in (dbname string)",
					"handler": {
						"endpoint": "/{ dbname }",
						"method": "GET"
					}
				},
				"get": {
					"title": "Get collection",
					"returns": "map",
					"syntax": "get collection (collectionname string) in (dbname string)",
					"handler": {
						"endpoint": "/{ dbname }/{ collectionname }",
						"method": "GET"
					}
				}
			}
		}
	}
}
